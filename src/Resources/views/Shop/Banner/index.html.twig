{% if banners|length > 0 %}
    {% if banners|length > 1 %}
        <div class="slider-pro" id="banner-slider">
            <div class="sp-slides">
                {% for banner in banners %}
                    <div class="sp-slide">
                        <a href="{{ banner.url }}" target="_blank">
                            <img class="sp-image" src="{{ banner.imageName|imagine_filter('odiseo_sylius_banner_image') }}">
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% else %}
        <a href="{{ banners[0].url }}" target="_blank">
            <img src="{{ banners[0].imageName|imagine_filter('odiseo_sylius_banner_image') }}">
        </a>
    {% endif %}
{% endif %}
